# Description: Commonly requested regular expressions
# URL:         https://metacpan.org/release/Regexp-Common
# Depends on:  perl

name=p5-regexp-common
version=1.0.0
release=1
source=https://cpan.metacpan.org/authors/id/A/AR/ARFREITAS/Regexp-Common-v$version.tar.gz

build() {
	cd Regexp-Common-v$version

	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor

	make
	make DESTDIR=$PKG install

	# remove junk and empty dirs
	find $PKG -depth \
		-type f \( -name perllocal.pod  \
			-o -name \*.bs          \
			-o -name .packlist      \
			\) -delete ,            \
		-type d -empty -delete
}
