# Description: Install and manage Python packages
# URL:         https://pypi.python.org/pypi/pip/
# Depends on:  py3-setuptools

name=py3-pip
version=24.2
release=1
source=https://files.pythonhosted.org/packages/source/p/pip/pip-$version.tar.gz

build() {
	cd pip-$version

	gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2
	/usr/bin/python3 -m installer -d $PKG .dist/*.whl

	/usr/bin/python3     -m compileall $PKG
	/usr/bin/python3 -O  -m compileall $PKG
	/usr/bin/python3 -OO -m compileall $PKG

	# remove obsolete
	rm $PKG/usr/bin/pip
}
