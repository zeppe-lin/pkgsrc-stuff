# Description: XSS scanning tool and parameter analyzer
# URL:         https://github.com/hahwul/dalfox

name=dalfox-bin
version=2.12.0
release=1
source=$name-$version-amd64.tar.gz::https://github.com/hahwul/dalfox/releases/download/v$version/dalfox-linux-amd64.tar.gz

build() {
	ls -la .

	mkdir -p $PKG/usr/bin
	mv dalfox-linux-amd64 $PKG/usr/bin/dalfox
	chmod 0755 $PKG/usr/bin/dalfox
}
