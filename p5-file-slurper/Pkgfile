# Description: Simple, sane and efficient module to slurp a file
# URL:         https://metacpan.org/pod/File::Slurper
# Depends on:  p5-test-warnings

name=p5-file-slurper
version=0.014
release=1
source=https://cpan.metacpan.org/authors/id/L/LE/LEONT/File-Slurper-$version.tar.gz

build() {
	cd File-Slurper-$version

	command -v finddepsdistmeta && finddepsdistmeta
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor

	make
	make DESTDIR=$PKG install

	# remove junk and empty dirs
	find $PKG -depth \
		-type f \( -name perllocal.pod  \
			-o -name \*.bs          \
			-o -name .packlist      \
			\) -delete ,            \
		-type d -empty -delete
}
