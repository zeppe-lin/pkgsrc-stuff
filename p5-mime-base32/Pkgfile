# Description: Base32 encoder and decoder
# URL:         https://metacpan.org/pod/MIME::Base32
# Depends on:  perl

name=p5-mime-base32
version=1.303
release=1
source=https://cpan.metacpan.org/authors/id/R/RE/REHSACK/MIME-Base32-$version.tar.gz

build() {
	cd MIME-Base32-$version

	if command -v finddepsdistmeta; then finddepsdistmeta; fi

	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor

	make V=1
	make install DESTDIR=$PKG

	# remove junk and empty dirs
	find $PKG -depth \
		-type f \( -name perllocal.pod  \
			-o -name \*.bs          \
			-o -name .packlist      \
			\) -delete ,            \
		-type d -empty -delete
}
