# Description: Fake program timestamps without altering the system clock
# URL:         https://github.com/wolfcw/libfaketime

name=libfaketime
version=0.9.11
release=1
source=https://github.com/wolfcw/$name/archive/v$version/$name-v$version.tar.gz

build() {
	make -C $name-$version PREFIX=/usr
	make -C $name-$version PREFIX=/usr DESTDIR=$PKG install

	# remove junk
	rm -r $PKG/usr/share/doc
}
